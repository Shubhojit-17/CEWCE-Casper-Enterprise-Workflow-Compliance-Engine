# ==============================================================================
# CEWCE Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in the values.
# DO NOT commit .env files with real credentials to version control.
# ==============================================================================

# ------------------------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------------------------
NODE_ENV=development
APP_PORT=3001
APP_HOST=localhost
APP_NAME=CEWCE

# ------------------------------------------------------------------------------
# Database (PostgreSQL)
# ------------------------------------------------------------------------------
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=<SET_MANUALLY>

# ------------------------------------------------------------------------------
# Redis
# ------------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=<SET_MANUALLY>

# ------------------------------------------------------------------------------
# Casper Network Configuration
# ------------------------------------------------------------------------------
# Testnet RPC endpoint (CSPR.cloud recommended - requires access token)
CASPER_NODE_URL=https://node.testnet.cspr.cloud/rpc
# Alternative: http://localhost:7777/rpc for local node

# CSPR.cloud access token (get yours at https://console.cspr.build/)
CSPR_CLOUD_ACCESS_TOKEN=<GET_FROM_CSPR_BUILD>

# Chain name (casper-test for testnet, casper for mainnet)
CASPER_CHAIN_NAME=casper-test

# Contract hash after deployment (DEPLOYED: Jan 3, 2026)
WORKFLOW_CONTRACT_HASH=hash-f050d3d06be9c182d46ef6edc261daa836e9612b2b42dbbdb25325e682f4a515
WORKFLOW_CONTRACT_PACKAGE_HASH=hash-9c9b2da90a07c81b4a8671acbe68c744b0828d9c85437b74eafc639795e46054

# ------------------------------------------------------------------------------
# Casper Sidecar (OPTIONAL - Post-Hackathon)
# ------------------------------------------------------------------------------
# CASPER_SIDECAR_URL=
# Note: Sidecar is NOT required for hackathon deployment.
# The system operates in RPC-only mode using get-deploy polling.
# Sidecar integration is deferred to post-hackathon production phases.
# See TECHSTACK.md for details.

# ------------------------------------------------------------------------------
# Authentication
# ------------------------------------------------------------------------------
# JWT secret for session tokens (generate a secure random string)
JWT_SECRET=<SET_MANUALLY>
JWT_EXPIRY=24h

# ------------------------------------------------------------------------------
# CORS Configuration
# ------------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:5173

# ------------------------------------------------------------------------------
# Logging
# ------------------------------------------------------------------------------
LOG_LEVEL=info
# Options: trace, debug, info, warn, error, fatal

# ------------------------------------------------------------------------------
# Rate Limiting
# ------------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
