# Backend Environment Configuration
# Copy to .env and fill in values

# Application
NODE_ENV=development
PORT=3001
HOST=localhost

# Database
DATABASE_URL=<SET_MANUALLY>

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=<SET_MANUALLY>

# Casper Network
CASPER_NODE_URL=https://rpc.testnet.casperlabs.io/rpc
CASPER_CHAIN_NAME=casper-test
WORKFLOW_CONTRACT_HASH=<PROVIDED_AT_DEPLOYMENT>
WORKFLOW_CONTRACT_PACKAGE_HASH=<PROVIDED_AT_DEPLOYMENT>

# Casper Sidecar (OPTIONAL - Post-Hackathon)
# CASPER_SIDECAR_URL=
# Note: Not required. System uses RPC polling for deploy confirmation.

# Authentication
JWT_SECRET=<SET_MANUALLY>
JWT_EXPIRY=24h

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
